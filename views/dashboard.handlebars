<!-- This page will display a specific user's posts -->

<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{first_name}}! We're happy you're here</h2>
  </div>
</div>

<div class="row-mt-4">
  <div class="col-md-6">
    <h3>Create a new post: </h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Title: </label>
        <input
          class="form-input"
          type="text"
          id="post-title"
          name="post-title"
        />
      </div>
      <div class="form-group">
        <label for="post-content">Post: </label>
        <textarea
          class="form-input"
          id="post-content"
          name="post-content"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
    <div class="col-md-6 post-list">
      <h3>Posts: </h3>

      {{#each posts as |Post|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/post/{{Post.id}}">{{Post.title}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{Post.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>